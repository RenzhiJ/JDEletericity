<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <ImageView
            android:id="@+id/f5_head"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/normal_regbg" />
        <ImageView
            android:id="@+id/another_head"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/reg_bg" />

        <RelativeLayout
            android:id="@+id/rlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/f5_headpig"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@mipmap/user" />

            <TextView
                android:id="@+id/f5_deng_tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/f5_headpig"
                android:text="登录/注册 >"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>


        <ImageView

            android:id="@+id/f5_head_xiaoxi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@mipmap/my_msg_bai" />

        <ImageView
            android:id="@+id/f5_head_shez"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/f5_head_xiaoxi"
            android:src="@mipmap/my_set_bai" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:id="@+id/main_lin"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <TextView
                    android:text="代付款"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/dfk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="代收货"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/dsh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="代评价"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/dpj"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="退换/售后"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/th_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:text="我的订单"
                    android:padding="10dp"
                    android:id="@+id/tv_myOrder"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/mydd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginTop="10dp"
                        android:background="#ccc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginTop="10dp"
                        android:background="#ccc" />
                </LinearLayout>

                <!--<ImageView-->
                    <!--android:id="@+id/f5_body_one5"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@mipmap/main_one5" />-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/f5_body_two1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@mipmap/main_two1" />

                <ImageView
                    android:id="@+id/f5_body_two2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@mipmap/main_two2" />

                <ImageView
                    android:id="@+id/f5_body_two3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@mipmap/main_two3" />

                <ImageView
                    android:id="@+id/f5_body_two4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@mipmap/main_two4" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginTop="10dp"
                        android:background="#ccc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_marginTop="10dp"
                        android:background="#ccc" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/f5_body_two5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@mipmap/main_two5" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/center_gray"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/main_lin"
            android:background="#ccc" />


        <LinearLayout
            android:id="@+id/ll_top"
            android:background="#fff"
            android:padding="10dp"
            android:layout_below="@+id/center_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/spgz" />
                <TextView
                    android:text="商品关注"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dp" />
                <TextView
                    android:text="店铺关注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gz" />
                <TextView
                    android:text="内容收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lljl" />
                <TextView
                    android:text="浏览记录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/ll_top"
            android:background="#ccc" />
        <LinearLayout
            android:background="#fff"
            android:padding="10dp"
            android:id="@+id/ll_below"
            android:layout_below="@+id/tv_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/hd" />
                <TextView
                    android:text="活动"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shqz" />
                <TextView
                    android:text="社区"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"

                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/kh" />
                <TextView
                    android:text="客户服务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/green_carts" />
                <TextView
                    android:text="京东超市"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
